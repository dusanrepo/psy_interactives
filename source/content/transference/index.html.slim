          span.likert-labels Unreliable
        label.option5.dependable-label.each-radio-parent
          input.likert-input.option name="dependable" type="radio" value="option" data-value="5" /
          span.likert-labels Highly unreliable

      fieldset.likert
        legend.sr-only If you see this person as easily upset, select "very easily upset." If you see this person as emotionally stable, select "highly emotionally stable."
        label.option1.complex-label.each-radio-parent
          input.likert-input.option name="complex" type="radio" value="option" data-value="1" /
          span.likert-labels Very easily upset
        label.option2.complex-label.each-radio-parent
          input.likert-input.option name="complex" type="radio" value="option" data-value="2" /
          span.likert-labels Easily upset
        label.option3.complex-label.each-radio-parent
