          input.likert-input.option name="extraverted" type="radio" value="option" data-value="1" /
          span.likert-labels Highly extraverted
        label.option2.extraverted-label.each-radio-parent
          input.likert-input.option name="extraverted" type="radio" value="option" data-value="2" /
          span.likert-labels Extraverted
        label.option3.extraverted-label.each-radio-parent
          input.likert-input.option name="extraverted" type="radio" value="option" data-value="3" /
          span.likert-labels Neutral
        label.option4.extraverted-label.each-radio-parent
          input.likert-input.option name="extraverted" type="radio" value="option" data-value="4" /
          span.likert-labels Reserved
        label.option5.extraverted-label.each-radio-parent
          input.likert-input.option name="extraverted" type="radio" value="option" data-value="5" /
          span.likert-labels Highly reserved

      fieldset.likert
        legend.sr-only If you see this person as reliable, select "highly reliable." If you see this person as unreliable, select "highly unreliable."
