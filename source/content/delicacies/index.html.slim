.container-fluid
  .modal.fade
    .modal-dialog.modal-dialog-centered
      .modal-content.text-center
        span.fa.fa-spinner.fa-spin.fa-3x
  .row.justify-content-center
    .col-12.col-md-8#map.content
      .info-box.position-absolute.d-none
        .description.d-none.mt-1
        .row
          .col-12
            p.country-name
      svg.map#map-box alt="A map of the world"
        title A map of the world
        .btn-group-vertical.zoom-btns
          button#zoom-in.zoom-button aria-controls="map-box" aria-label="Zoom In"
            i.fas.fa-plus
          button#zoom-out.zoom-button aria-controls="map-box" aria-label="Zoom Out"
            i.fas.fa-minus
