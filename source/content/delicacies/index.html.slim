        a#jam.dropdown-item href="#"  Jamaica
        a#jpn.dropdown-item href="#"  Japan
        a#mys.dropdown-item href="#"  Malaysia
        a#mex.dropdown-item href="#"  Mexico
        a#nor.dropdown-item href="#"  Norway
        a#rus.dropdown-item href="#"  Russia
        a#zaf.dropdown-item href="#"  South Africa
        a#tha.dropdown-item href="#"  Thailand
        a#uga.dropdown-item href="#"  Uganda
        a#gbr.dropdown-item href="#"  United Kingdom
