    /   button.btn.btn-primary onClick="openTip(myChart,0,0)" Show 0
    /   button.btn.btn-primary onClick="closeTip(myChart,0,0)" Hide 0
    /   button.btn.btn-primary onClick="openTip(myChart,0,1)" Show 1
    /   button.btn.btn-primary onClick="closeTip(myChart,0,1)" Hide 1
    /   button.btn.btn-primary onClick="openTip(myChart,0,2)" Show 2
    /   button.btn.btn-primary onClick="closeTip(myChart,0,2)" Hide 2

.container.radio-container-lg.radio-container
  .row.row-override.justify-content-center.input-desktop
    .col-md-6.justify-content-between.d-flex.mt-4.mx-auto aria-hidden='true'
      label.not-attractive.text-center
        strong Not attractive
      label.very-attractive.attractive-label-top
        strong Very attractive
    .row.col-12.justify-content-center
      fieldset
        legend.sr-only Select "1" to rate this celebrity as not attractive or "10" for very attractive.
        .btn-group.btn-group-toggle.p-2.text-center
          label.option1.btn.btn-primary
            input#option1.option.form-check-input name="Options" type="radio" value="1" /
            |1
          label.option2.btn.btn-primary
            input#option2.option.form-check-input name="Options" type="radio" value="2" /
            |2
          label.option3.btn.btn-primary
            input#option3.option.form-check-input name="Options" type="radio" value="3" /
            |3 
          label.option4.btn.btn-primary
            input#option4.option.form-check-input name="Options" type="radio" value="4" /
            |4
          label.option5.btn.btn-primary
            input#option5.option.form-check-input name="Options" type="radio" value="5" /
            |5
          label.option6.btn.btn-primary
            input#option6.option.form-check-input name="Options" type="radio" value="6" /
            |6
          label.option7.btn.btn-primary
            input#option7.option.form-check-input name="Options" type="radio" value="7" /
            |7
          label.option8.btn.btn-primary
            input#option8.option.form-check-input name="Options" type="radio" value="8" /
            |8 
          label.option9.btn.btn-primary
            input#option9.option.form-check-input name="Options" type="radio" value="9" /
            |9
          label.option10.btn.btn-primary
            input#option10.option.form-check-input name="Options" type="radio" value="10" /
            |10
    / .col-12.text-center.p-0.attractive-label-bottom
      label.strong-label.attractive-label-bottom
        strong Very attractive
  .row.row-override.justify-content-center.input-mobile
    .col-md-6.justify-content-center.d-flex.mt-4.mx-auto aria-hidden='true'
      label.not-attractive.text-center
        strong Attractiveness rating
    fieldset.col-12.d-flex.justify-content-center
      legend.sr-only Attractiveness rating
      input#rating.form-control.tab-able required='required' type='number' placeholder='Enter a number 1 through 10' min='1' max='10' step='1'
    / fieldset.col-12.d-flex.justify-content-center
    /   / legend.sr-only If this person is not attractive, input "1." If you see this person as very attractive, input "10."
    /   legend.sr-only Attractiveness rating
    /   form#mobile-form
    /     input#rating.form-control.tab-able required='required' type='number' placeholder='Enter a number 1 through 10' min='1' max='10' step='1'
    /     input#submit.barely-there type='submit' aria-hidden='true' tabindex='-1'

.container
  .row.interactive-footer
    .container
      .col.d-flex
        .mr-auto.p-2#reset.reset
          button.btn.btn-link.tab-able
            | Reset
        .p-2
          button.btn.btn-primary#previous.d-none.tab-able aria-controls="interactive-content"
            | Previous
        .p-2
          button.btn.btn-primary#next.input-desktop.d-none.tab-able aria-controls="interactive-content"
            | Next
        .p-2
          button.btn.btn-primary#submitNext.input-mobile.d-none.tab-able aria-controls="interactive-content"
            | Next
