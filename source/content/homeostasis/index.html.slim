        img.step-2.d-none data-gifffer="/assets/images/homeostasis/step-2.gif" data-gifffer-width="100%" data-gifffer-alt=("step 2") src="" alt="" /
        img.step-3.d-none data-gifffer="/assets/images/homeostasis/step-3.gif" data-gifffer-width="100%" data-gifffer-alt=("step 3") src="" alt="" /
        img.step-4.d-none data-gifffer="/assets/images/homeostasis/step-4.gif" data-gifffer-width="100%" data-gifffer-alt=("step 4") src="" alt="" /
        img.step-5.d-none data-gifffer="/assets/images/homeostasis/step-5.gif" data-gifffer-width="100%" data-gifffer-alt=("step 5") src="" alt="" /
